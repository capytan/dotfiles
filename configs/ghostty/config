# Scrollback
scrollback-limit = 100000

# macOS
macos-option-as-alt = true
macos-titlebar-style = tabs

# Keybindings
keybind = shift+enter=text:\n

# Machine-specific overrides (optional, gitignored)
config-file = ?~/.config/ghostty/local.conf
