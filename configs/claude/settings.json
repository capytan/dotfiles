{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 365,
  "env": {
    "MAX_THINKING_TOKENS": "31999",
    "DISABLE_MICROCOMPACT": "1",
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "CLAUDE_CODE_AUTO_CONNECT_IDE": "0",
    "CLAUDE_CODE_IDE_SKIP_AUTO_INSTALL": "1",
    "CLAUDE_CODE_IDE_SKIP_VALID_CHECK": "1",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "// File operations",
      "Edit(**)",
      "Read(**)",
      "Write(**)",
      "MultiEdit(**)",
      "Glob(**)",
      "Grep(**)",
      "// Git operations",
      "Bash(git status *)",
      "Bash(git log *)",
      "Bash(git diff *)",
      "Bash(git show *)",
      "Bash(git branch *)",
      "Bash(git checkout *)",
      "Bash(git switch *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git stash *)",
      "Bash(git fetch *)",
      "Bash(git pull *)",
      "Bash(git tag *)",
      "Bash(git remote *)",
      "Bash(git rev-parse *)",
      "Bash(git config *)",
      "Bash(git blame *)",
      "Bash(git cherry-pick *)",
      "Bash(git worktree *)",
      "Bash(git ls-files *)",
      "Bash(git shortlog *)",
      "// Git -C (read-only, cross-repo)",
      "Bash(git -C * status *)",
      "Bash(git -C * log *)",
      "Bash(git -C * diff *)",
      "Bash(git -C * show *)",
      "Bash(git -C * branch *)",
      "Bash(git -C * ls-files *)",
      "Bash(git -C * rev-parse *)",
      "Bash(git -C * blame *)",
      "Bash(git -C * shortlog *)",
      "Bash(git -C * describe *)",
      "Bash(git -C * fetch *)",
      "Bash(git -C * pull *)",
      "// Git -C (write, cross-repo)",
      "Bash(git -C * add *)",
      "Bash(git -C * commit *)",
      "Bash(git -C * stash *)",
      "Bash(git -C * checkout *)",
      "Bash(git -C * switch *)",
      "// GitHub CLI (read-only)",
      "Bash(gh pr view *)",
      "Bash(gh pr diff *)",
      "Bash(gh pr list *)",
      "Bash(gh issue view *)",
      "Bash(gh issue list *)",
      "// File system (read-only)",
      "Bash(find *)",
      "Bash(ls *)",
      "Bash(tree *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(pwd)",
      "Bash(which *)",
      "Bash(date)",
      "Bash(diff *)",
      "// File system (write)",
      "Bash(mkdir *)",
      "Bash(touch *)",
      "Bash(echo *)",
      "// Search tools",
      "Bash(grep *)",
      "Bash(rg *)",
      "Bash(ag *)",
      "// Node.js & package managers",
      "Bash(node *)",
      "Bash(npm install *)",
      "Bash(npm run *)",
      "Bash(npm test *)",
      "Bash(npm list *)",
      "Bash(npx *)",
      "Bash(yarn *)",
      "Bash(pnpm *)",
      "// Python",
      "Bash(python *)",
      "Bash(python3 *)",
      "Bash(pip *)",
      "Bash(pytest *)",
      "Bash(uv *)",
      "Bash(poetry *)",
      "Bash(pipenv *)",
      "// Linters & Formatters",
      "Bash(eslint *)",
      "Bash(prettier *)",
      "Bash(black *)",
      "Bash(ruff *)",
      "Bash(flake8 *)",
      "Bash(mypy *)",
      "Bash(pre-commit *)",
      "// Build tools",
      "Bash(make *)",
      "Bash(cmake *)",
      "Bash(cargo *)",
      "Bash(go *)",
      "// Testing",
      "Bash(jest *)",
      "Bash(vitest *)",
      "Bash(mocha *)",
      "// Docker (read & build)",
      "Bash(docker build *)",
      "Bash(docker compose *)",
      "Bash(docker run *)",
      "Bash(docker ps *)",
      "Bash(docker images *)",
      "// Terraform (safe operations)",
      "Bash(terraform fmt *)",
      "Bash(terraform plan *)",
      "Bash(terraform validate *)",
      "Bash(terraform init *)",
      "Bash(terraform get *)",
      "Bash(terraform graph *)",
      "Bash(tflint *)",
      "// File permissions & copy",
      "Bash(chmod *)",
      "Bash(cp *)",
      "// Process management",
      "Bash(kill *)",
      "Bash(killall *)",
      "Bash(pkill *)",
      "// Text processing",
      "Bash(awk *)",
      "Bash(tr *)",
      "Bash(cut *)",
      "Bash(wc *)",
      "Bash(uniq *)",
      "Bash(sed *)",
      "Bash(sort *)",
      "Bash(jq *)",
      "Bash(yq *)",
      "Bash(base64 *)",
      "// System information (read-only)",
      "Bash(ps *)",
      "Bash(df *)",
      "Bash(du *)",
      "Bash(lsof *)",
      "Bash(env)",
      "Bash(printenv *)",
      "Bash(whoami)",
      "Bash(uname *)",
      "Bash(hostname)",
      "Bash(uptime)",
      "// macOS utilities",
      "Bash(pbcopy *)",
      "Bash(pbpaste)",
      "Bash(defaults read *)",
      "// Homebrew (read-only)",
      "Bash(brew list *)",
      "Bash(brew info *)",
      "Bash(brew search *)",
      "Bash(brew outdated *)",
      "Bash(brew deps *)",
      "// GitHub CLI (additional read-only)",
      "Bash(gh repo view *)",
      "Bash(gh workflow *)",
      "Bash(gh run view *)",
      "Bash(gh auth status)",
      "// MCP: context7 (read-only)",
      "mcp__plugin_context7_context7__resolve-library-id",
      "mcp__plugin_context7_context7__query-docs",
      "// Web access",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:gist.github.com)",
      "WebFetch(domain:json.schemastore.org)",
      "WebFetch(domain:www.schemastore.org)",
      "WebFetch(domain:zenn.dev)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:claude.com)",
      "// Web access (Japanese developers)",
      "WebFetch(domain:qiita.com)",
      "WebFetch(domain:stackoverflow.com)",
      "WebFetch(domain:developer.mozilla.org)",
      "WebFetch(domain:npmjs.com)",
      "WebFetch(domain:pypi.org)",
      "WebFetch(domain:pkg.go.dev)",
      "WebFetch(domain:crates.io)",
      "WebFetch(domain:docs.rs)",
      "WebFetch(domain:react.dev)",
      "WebFetch(domain:typescriptlang.org)",
      "WebFetch(domain:nodejs.org)",
      "WebFetch(domain:docs.docker.com)",
      "WebFetch(domain:kubernetes.io)",
      "// tmux & shell utilities",
      "Bash(tmux list-panes *)",
      "Bash(tmux show-options *)",
      "Bash(tmux show-window-options *)",
      "Bash(printf *)",
      "// Skills",
      "Skill(commit-commands:commit)"
    ],
    "ask": [
      "// System operations",
      "Bash(sudo *)",
      "Bash(su *)",
      "Bash(chown *)",
      "// Destructive file operations",
      "Bash(rm *)",
      "Bash(rmdir *)",
      "Bash(mv *)",
      "// Git (push & destructive)",
      "Bash(git push *)",
      "Bash(git push --force *)",
      "Bash(git rebase *)",
      "Bash(git reset *)",
      "Bash(git merge *)",
      "// Git -C (push & destructive, cross-repo)",
      "Bash(git -C * push *)",
      "Bash(git -C * merge *)",
      "Bash(git -C * rebase *)",
      "Bash(git -C * reset *)",
      "// Package publishing",
      "Bash(npm publish *)",
      "Bash(pip upload *)",
      "Bash(cargo publish *)",
      "Bash(gem push *)",
      "// Infrastructure changes",
      "Bash(terraform apply *)",
      "Bash(terraform destroy *)",
      "Bash(terraform import *)",
      "Bash(kubectl delete *)",
      "Bash(kubectl apply *)",
      "Bash(helm install *)",
      "Bash(helm upgrade *)",
      "// Network operations",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(nc *)",
      "Bash(netcat *)",
      "Bash(ssh *)",
      "Bash(scp *)",
      "Bash(rsync *)",
      "Bash(ftp *)",
      "// Database operations",
      "Bash(psql *)",
      "Bash(mysql *)",
      "Bash(mongod *)",
      "Bash(redis-cli *)",
      "Bash(sqlite3 *)",
      "// Docker (destructive)",
      "Bash(docker push *)",
      "Bash(docker rm *)",
      "Bash(docker rmi *)",
      "Bash(docker system prune *)",
      "// System services & packages",
      "Bash(systemctl *)",
      "Bash(service *)",
      "Bash(apt *)",
      "Bash(apt-get *)",
      "Bash(yum *)",
      "Bash(brew *)",
      "Bash(snap *)",
      "// Sensitive file access",
      "Read(.env*)",
      "Read(**/.env*)",
      "Read(**/secrets/**)",
      "Read(**/credentials/**)",
      "Read(~/.ssh/**)",
      "Read(id_rsa*)",
      "Read(id_ed25519*)",
      "Read(id_dsa*)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Read(**/*password*)",
      "Read(**/*secret*)",
      "Read(**/*.pem)",
      "Read(**/*.pfx)",
      "Read(**/*.p12)",
      "Read(**/*.jks)",
      "Read(~/.aws/**)",
      "Read(~/.kube/**)",
      "Read(~/.docker/config.json)",
      "Read(~/.netrc)",
      "Read(**/*.tfvars)",
      "// Sensitive file writes",
      "Write(.env*)",
      "Write(**/.env*)",
      "Write(**/secrets/**)",
      "Write(**/credentials/**)",
      "Write(~/.ssh/**)",
      "Write(**/*token*)",
      "Write(**/*key*)",
      "Write(**/*password*)",
      "Write(**/*secret*)",
      "Write(~/.aws/**)",
      "Write(~/.kube/**)",
      "Write(~/.docker/config.json)",
      "Write(**/*.tfvars)",
      "// File/archive write operations",
      "Bash(tee *)",
      "Bash(tar *)",
      "Bash(zip *)",
      "Bash(unzip *)",
      "// Application & process launch",
      "Bash(open *)",
      "// Development environment manager",
      "Bash(mise *)",
      "// MCP restrictions",
      "mcp__supabase__execute_sql",
      "mcp__*__delete*",
      "mcp__*__drop*",
      "mcp__*__truncate*"
    ],
    "defaultMode": "acceptEdits"
  },
  "model": "sonnet",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/tmux-notify.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/tmux-alert.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/tmux-reset.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/tmux-working.sh",
            "async": true
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/tmux-tool-failure.sh",
            "async": true
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/tmux-subagent-start.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/tmux-subagent-stop.sh"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/tmux-session-start.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/tmux-session-end.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "code-review@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": false,
    "frontend-design@claude-plugins-official": false,
    "github@claude-plugins-official": false,
    "gopls-lsp@claude-plugins-official": false,
    "learning-output-style@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": false,
    "plugin-dev@claude-plugins-official": false,
    "pr-review-toolkit@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": false,
    "security-guidance@claude-plugins-official": true,
    "sentry@claude-plugins-official": false,
    "typescript-lsp@claude-plugins-official": false,
    "voltagent-core-dev@voltagent-subagents": false,
    "voltagent-domains@voltagent-subagents": false,
    "voltagent-lang@voltagent-subagents": false
  },
  "language": "ja",
  "alwaysThinkingEnabled": true,
  "teammateMode": "auto",
  "showTurnDuration": true,
  "enabledMcpjsonServers": ["context7"],
  "enableAllProjectMcpServers": true
}
