{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 365,
  "env": {
    "MAX_THINKING_TOKENS": "31999",
    "DISABLE_MICROCOMPACT": "1",
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "CLAUDE_CODE_AUTO_CONNECT_IDE": "0",
    "CLAUDE_CODE_IDE_SKIP_AUTO_INSTALL": "1",
    "CLAUDE_CODE_IDE_SKIP_VALID_CHECK": "1",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "// File operations",
      "Edit(**)",
      "Read(**)",
      "Write(**)",
      "MultiEdit(**)",
      "Glob(**)",
      "Grep(**)",
      "// Git operations",
      "Bash(git status *)",
      "Bash(git log *)",
      "Bash(git diff *)",
      "Bash(git show *)",
      "Bash(git branch *)",
      "Bash(git checkout *)",
      "Bash(git switch *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git stash *)",
      "Bash(git fetch *)",
      "Bash(git pull *)",
      "Bash(git tag *)",
      "Bash(git remote *)",
      "Bash(git rev-parse *)",
      "Bash(git config *)",
      "Bash(git blame *)",
      "Bash(git cherry-pick *)",
      "Bash(git worktree *)",
      "Bash(git ls-files *)",
      "Bash(git shortlog *)",
      "// GitHub CLI (read-only)",
      "Bash(gh pr view *)",
      "Bash(gh pr diff *)",
      "Bash(gh pr list *)",
      "Bash(gh issue view *)",
      "// File system (read-only)",
      "Bash(find *)",
      "Bash(ls *)",
      "Bash(tree *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(pwd)",
      "Bash(which *)",
      "Bash(date)",
      "Bash(diff *)",
      "// File system (write)",
      "Bash(mkdir *)",
      "Bash(touch *)",
      "Bash(echo *)",
      "// Search tools",
      "Bash(grep *)",
      "Bash(rg *)",
      "Bash(ag *)",
      "// Node.js & package managers",
      "Bash(node *)",
      "Bash(npm install *)",
      "Bash(npm run *)",
      "Bash(npm test *)",
      "Bash(npm list *)",
      "Bash(npx *)",
      "Bash(yarn *)",
      "Bash(pnpm *)",
      "// Python",
      "Bash(python *)",
      "Bash(python3 *)",
      "Bash(pip *)",
      "Bash(pytest *)",
      "Bash(uv *)",
      "Bash(poetry *)",
      "Bash(pipenv *)",
      "// Linters & Formatters",
      "Bash(eslint *)",
      "Bash(prettier *)",
      "Bash(black *)",
      "Bash(ruff *)",
      "Bash(flake8 *)",
      "Bash(mypy *)",
      "Bash(pre-commit *)",
      "// Build tools",
      "Bash(make *)",
      "Bash(cmake *)",
      "Bash(cargo *)",
      "Bash(go *)",
      "// Testing",
      "Bash(jest *)",
      "Bash(vitest *)",
      "Bash(mocha *)",
      "// Docker (read & build)",
      "Bash(docker build *)",
      "Bash(docker compose *)",
      "Bash(docker run *)",
      "Bash(docker ps *)",
      "Bash(docker images *)",
      "// Terraform (safe operations)",
      "Bash(terraform fmt *)",
      "Bash(terraform plan *)",
      "Bash(terraform validate *)",
      "Bash(terraform init *)",
      "Bash(terraform get *)",
      "Bash(terraform graph *)",
      "Bash(tflint *)"
    ],
    "ask": [
      "// System operations",
      "Bash(sudo *)",
      "Bash(su *)",
      "Bash(chmod *)",
      "Bash(chown *)",
      "// Destructive file operations",
      "Bash(rm *)",
      "Bash(rmdir *)",
      "Bash(mv *)",
      "Bash(cp *)",
      "// Git (push & destructive)",
      "Bash(git push *)",
      "Bash(git push --force *)",
      "Bash(git rebase *)",
      "Bash(git reset *)",
      "Bash(git merge *)",
      "// Package publishing",
      "Bash(npm publish *)",
      "Bash(pip upload *)",
      "Bash(cargo publish *)",
      "Bash(gem push *)",
      "// Infrastructure changes",
      "Bash(terraform apply *)",
      "Bash(terraform destroy *)",
      "Bash(terraform import *)",
      "Bash(kubectl delete *)",
      "Bash(kubectl apply *)",
      "Bash(helm install *)",
      "Bash(helm upgrade *)",
      "// Network operations",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(nc *)",
      "Bash(netcat *)",
      "Bash(ssh *)",
      "Bash(scp *)",
      "Bash(rsync *)",
      "Bash(ftp *)",
      "// Database operations",
      "Bash(psql *)",
      "Bash(mysql *)",
      "Bash(mongod *)",
      "Bash(redis-cli *)",
      "Bash(sqlite3 *)",
      "// Docker (destructive)",
      "Bash(docker push *)",
      "Bash(docker rm *)",
      "Bash(docker rmi *)",
      "Bash(docker system prune *)",
      "// Process management",
      "Bash(kill *)",
      "Bash(killall *)",
      "Bash(pkill *)",
      "// System services & packages",
      "Bash(systemctl *)",
      "Bash(service *)",
      "Bash(apt *)",
      "Bash(apt-get *)",
      "Bash(yum *)",
      "Bash(brew *)",
      "Bash(snap *)",
      "// Sensitive file access",
      "Read(.env*)",
      "Read(**/.env*)",
      "Read(**/secrets/**)",
      "Read(**/credentials/**)",
      "Read(~/.ssh/**)",
      "Read(id_rsa*)",
      "Read(id_ed25519*)",
      "Read(id_dsa*)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Read(**/*password*)",
      "Read(**/*secret*)",
      "Read(**/*.pem)",
      "Read(**/*.pfx)",
      "Read(**/*.p12)",
      "Read(**/*.jks)",
      "Read(~/.aws/**)",
      "Read(~/.kube/**)",
      "Read(~/.docker/config.json)",
      "Read(~/.netrc)",
      "Read(**/*.tfvars)",
      "// Sensitive file writes",
      "Write(.env*)",
      "Write(**/.env*)",
      "Write(**/secrets/**)",
      "Write(**/credentials/**)",
      "Write(~/.ssh/**)",
      "Write(**/*token*)",
      "Write(**/*key*)",
      "Write(**/*password*)",
      "Write(**/*secret*)",
      "Write(~/.aws/**)",
      "Write(~/.kube/**)",
      "Write(~/.docker/config.json)",
      "Write(**/*.tfvars)",
      "// MCP restrictions",
      "mcp__supabase__execute_sql",
      "mcp__*__delete*",
      "mcp__*__drop*",
      "mcp__*__truncate*"
    ],
    "defaultMode": "acceptEdits"
  },
  "enabledPlugins": {
    "code-review@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "learning-output-style@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "sentry@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "aws-skills@smartbank-agent-skills": true,
    "voltagent-core-dev@voltagent-subagents": true,
    "voltagent-domains@voltagent-subagents": true,
    "voltagent-lang@voltagent-subagents": true
  },
  "teammateMode": "auto",
  "language": "ja",
  "alwaysThinkingEnabled": true,
  "showTurnDuration": true,
  "model": "sonnet"
}
