{
  "cleanupPeriodDays": 365,
  "env": {
    "MAX_THINKING_TOKENS": "31999",
    "DISABLE_MICROCOMPACT": "1",
    "CLAUDE_CODE_AUTO_CONNECT_IDE": "0",
    "CLAUDE_CODE_IDE_SKIP_AUTO_INSTALL": "1",
    "CLAUDE_CODE_IDE_SKIP_VALID_CHECK": "1",
    "DISABLE_AUTOUPDATER": "1",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "// Git operations",
      "Bash(git:*)",
      "// GitHub CLI",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "// File system operations",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(pwd)",
      "Bash(echo:*)",
      "Bash(which:*)",
      "Bash(date)",
      "Bash(diff:*)",
      "// Search tools",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(ag:*)",
      "// Node.js & npm",
      "Bash(npm install:*)",
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(npm list:*)",
      "Bash(node:*)",
      "Bash(npx:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "// Python",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(pip:*)",
      "Bash(pytest:*)",
      "Bash(uv:*)",
      "Bash(poetry:*)",
      "Bash(pipenv:*)",
      "// Linters & Formatters",
      "Bash(eslint:*)",
      "Bash(prettier:*)",
      "Bash(black:*)",
      "Bash(ruff:*)",
      "Bash(flake8:*)",
      "Bash(mypy:*)",
      "Bash(pre-commit:*)",
      "// Build tools",
      "Bash(make:*)",
      "Bash(cmake:*)",
      "Bash(cargo:*)",
      "Bash(go:*)",
      "// Docker",
      "Bash(docker build:*)",
      "Bash(docker compose:*)",
      "Bash(docker run:*)",
      "Bash(docker ps:*)",
      "Bash(docker images:*)",
      "// Terraform",
      "Bash(terraform fmt:*)",
      "Bash(terraform plan:*)",
      "Bash(terraform validate:*)",
      "Bash(terraform init:*)",
      "Bash(terraform get:*)",
      "Bash(terraform graph:*)",
      "Bash(tflint:*)",
      "// Testing",
      "Bash(jest:*)",
      "Bash(vitest:*)",
      "Bash(mocha:*)",
      "// File operations",
      "Edit(**)",
      "Read(**)",
      "Write(**)",
      "MultiEdit(**)",
      "Glob(**)",
      "Grep(**)"
    ],
    "deny": [
      "// System operations",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(rmdir:*)",
      "Bash(mv /*:*)",
      "Bash(cp /*:*)",
      "// Package publishing",
      "Bash(npm publish:*)",
      "Bash(pip upload:*)",
      "Bash(cargo publish:*)",
      "Bash(gem push:*)",
      "// Git dangerous operations",
      "Bash(git push:*)",
      "Bash(git push --force:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git merge:*)",
      "Bash(git force:*)",
      "// Infrastructure changes",
      "Bash(terraform apply:*)",
      "Bash(terraform destroy:*)",
      "Bash(terraform import:*)",
      "Bash(kubectl delete:*)",
      "Bash(kubectl apply:*)",
      "Bash(helm install:*)",
      "Bash(helm upgrade:*)",
      "// Network operations",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(netcat:*)",
      "Bash(ssh:*)",
      "Bash(scp:*)",
      "Bash(rsync:*)",
      "Bash(ftp:*)",
      "// Database operations",
      "Bash(psql:*)",
      "Bash(mysql:*)",
      "Bash(mongod:*)",
      "Bash(redis-cli:*)",
      "Bash(sqlite3:*)",
      "// Docker dangerous operations",
      "Bash(docker push:*)",
      "Bash(docker rm:*)",
      "Bash(docker rmi:*)",
      "Bash(docker system prune:*)",
      "// Process management",
      "Bash(kill:*)",
      "Bash(killall:*)",
      "Bash(pkill:*)",
      "// System modification",
      "Bash(systemctl:*)",
      "Bash(service:*)",
      "Bash(apt:*)",
      "Bash(apt-get:*)",
      "Bash(yum:*)",
      "Bash(brew:*)",
      "Bash(snap:*)",
      "// Sensitive file access",
      "Read(.env*)",
      "Read(**/.env*)",
      "Read(**/secrets/**)",
      "Read(**/credentials/**)",
      "Read(~/.ssh/**)",
      "Read(id_rsa*)",
      "Read(id_ed25519*)",
      "Read(id_dsa*)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Read(**/*password*)",
      "Read(**/*secret*)",
      "Read(**/*.pem)",
      "Read(**/*.pfx)",
      "Read(**/*.p12)",
      "Read(**/*.jks)",
      "// Sensitive file writes",
      "Write(.env*)",
      "Write(**/.env*)",
      "Write(**/secrets/**)",
      "Write(**/credentials/**)",
      "Write(~/.ssh/**)",
      "Write(**/*token*)",
      "Write(**/*key*)",
      "Write(**/*password*)",
      "Write(**/*secret*)",
      "// MCP restrictions",
      "mcp__supabase__execute_sql",
      "mcp__*__delete*",
      "mcp__*__drop*",
      "mcp__*__truncate*"
    ],
    "defaultMode": "acceptEdits"
  },
  "alwaysThinkingEnabled": true,
  "model": "opus"
}
